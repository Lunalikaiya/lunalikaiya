<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= movie.title %></title>
    <%- include('./head'); %>

</head>
<body>
<%- include('./navbar'); %>

<br>
<div class="container">
    <hr>
    <div class="content">
        <div class="row">
            <div class="col-6">
                <h5 class="display-6">Information</h5>
                <div class="border border-3 p-3 text-center">
                    <img id="image" style="width: 50%" src="<%= movie.image %>"/>
                    <h3><%= movie.title %> </h3>
                    <button class="btn btn-danger" onclick="location.href='/movie/<%= movie._id %>/favourite'">+ Add to
                        Favourite
                    </button>
                    <hr>
                    <p><%= movie.body %> </p>
                    <p class="lead">
                        <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= movie.url %>"
                                title="YouTube video player" frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>
                    </p>
                </div>
            </div>
            <div class="col-6">
                <h5 class="display-6 mx-4">Comments</h5>
                <div class="border border-1 p-3">
                    <% movie.comments.slice().reverse().forEach(function(comment) { %>
                        <fieldset class="border border-dark border-1 p-3">
                            <p class="my-1"><%= comment.user.email %> (<%= comment.date %>)</p>
                            <hr>
                            <p class="lead"><%= comment.text %></p>
                        </fieldset>
                        <br>
                    <% }); %>
                </div>
                <br>
                <div class="container-fluid mb-4">
                    <div class="row">
                        <form action="/movie/<%= movie.id %>/comment" method="POST">
                            <label for="text">Leave a comment</label>
                            <textarea class="form-control border-1 border-dark" id="text" name="text"></textarea>
                            <br>
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-success" type="submit">Post Comment</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br><br><br>
</body>
</html>